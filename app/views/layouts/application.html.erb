<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <header>

      <nav class="navbar navbar-expand-lg navbar-light bg-info">

        <div class="container">

          <% if customer_signed_in? %>
            <strong><%= link_to "NaganoCake", public_root_path, class:"navbar-brand" %></strong>
          <% else %>
            <strong><%= link_to "NaganoCake", root_path, class:"navbar-brand" %></strong>
          <% end %>


          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">

            <span class="navbar-toggler-icon"></span>

          </button>

          <div class="navbar-collapse collapse show" id="navbarNavDropdown" style="">

            <ul class="navbar-nav ml-auto">

              <% if customer_signed_in? %>

                <li class="customer-name">
                 <strong>ようこそ、<%= current_customer.first_name %>さん！</strong>
                </li>


                <li>
                  <%= link_to public_customers_path(current_customer.id), class:'nav-link text-light' do  %>
                    マイページ
                  <% end %>
                </li>

                <li>
                  <%= link_to public_items_path, class:'nav-link text-light' do  %>
                    商品一覧
                  <% end %>
                </li>

                <li>
                  <%= link_to public_cart_items_path, class:'nav-link text-light' do  %>
                    カート
                  <% end %>
                </li>

                <li>
                  <%= link_to public_orders_path, class:'nav-link text-light' do  %>
                    注文履歴一覧
                  <% end %>
                </li>

                <li>
                  <%= link_to public_addresses_path, class:'nav-link text-light' do  %>
                    配送先一覧
                  <% end %>
                </li>

                <li>
                  <%= link_to destroy_customer_session_path, class:'nav-link text-light', method: :delete do  %>
                    ログアウト
                  <% end %>
                </li>

              <% elsif admin_signed_in? %>

                <li>
                  <%= link_to admin_items_path, class:'nav-link text-light' do  %>
                    商品一覧
                  <% end %>
                </li>

                <li>
                  <%= link_to admin_customers_path, class:'nav-link text-light' do  %>
                    会員一覧
                  <% end %>
                </li>

                <li>
                  <%= link_to admin_orders_path, class:'nav-link text-light' do  %>
                    注文履歴一覧
                  <% end %>
                </li>

                <li>
                  <%= link_to admin_genres_path, class:'nav-link text-light' do  %>
                    ジャンル一覧
                  <% end %>
                </li>

                <li>
                  <%= link_to destroy_admin_session_path, class:'nav-link text-light',method: :delete  do  %>
                    ログアウト
                  <% end %>
                </li>

              <% else %>

                <li>
                  <%= link_to new_customer_registration_path, class:'nav-link text-light' do  %>
                    会員登録
                  <% end %>
                </li>

                <li>
                  <%= link_to new_customer_session_path, class:'nav-link text-light' do  %>
                    会員ログイン
                  <% end %>
                </li>

                <li>
                  <%= link_to public_items_path, class:'nav-link text-light' do  %>
                    商品一覧
                  <% end %>
                </li>

              <% end %>

            </ul>

          </div>

        </div>

      </nav>

    </header>

    <%= yield %>

  </body>

</html>

