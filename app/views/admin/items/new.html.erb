


   <%= form_with model: @item do |f| %>

      <div class="form-group">

        <label for="item_name">Name</label>

        <%= f.text_field :name, class:'form-control item_name' %>

      </div>

      <div class="form-group">

        <label for="item_name">Image</label>

        <%= f.text_field :image_id, accept: "image/*",  class:'form-control image_id' %>

      </div>

      <div class="form-group">

        <label for="item_introduction">Introduction</label>

        <%= f.text_area :introduction, class:'form-control item_intorduction' %>

      </div>


      <div class="form-group">

        <label for="item_price">Price</label>

        <%= f.text_area :price, class:'form-control item_price' %>

      </div>

      <div class="form-group">

        <%= f.submit 'Create Book', class:'btn btn-success' %>

      </div>

    <% end %>

