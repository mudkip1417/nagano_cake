<br>
<h1 class="mx-auto col-5 text-center">会員情報</h1>
<br>

<div class="border col-10 mx-auto">

  <hr>
  <br>
  <h2>会員一覧</h2>

  <div class="row">

    <div class="col-md">

      <table class="table">

        <thead class="thead-dark">

          <tr>

            <th scope="col">会員ID</th>

            <th scope="col">氏名</th>

            <th scope="col">メールアドレス</th>

            <th scope="col">ステータス</th>

            <th scope="col"></th>

          </tr>

        </thead>

        <% @customers.each do |customer| %>

          <tbody>

            <tr>

              <td><%= customer.id %></td>

              <td>
                <%= link_to (customer.last_name + customer.first_name),admin_customer_path(customer.id) %>
              </td>

              <td><%= customer.email %></td>

              <td>
                <% if customer.is_deleted %>
                  退会済
                <% else %>
                  有効
                <% end %>
              </td>

              <td class="text-right">

                  <%= link_to "編集", edit_admin_customer_path(customer.id), class:'btn btn-sm btn-success' %>

                  <%= link_to "削除", admin_customers_path(customer.id), class:'btn btn-sm btn-danger', method: :delete %>

              </td>

            </tr>

          </tbody>

        <% end %>

      </table>

     </div>

  </div>
  <br>

</div>

<br>
