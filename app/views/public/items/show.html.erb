<div class="container">

  <div class="col">

    <div class="card shadow-sm">

      <%= link_to public_item_path(@item.id) do %>

        <%= image_tag @item.image, size: "500x450", class:'bd-placeholder-img card-img-top' %>

      <% end %>

      <div class="card-body">

        <p class="card-title">商品名:<%= @item.name %></p>

        <p class="card-title">紹介:<br><%= @item.introduction %></p>

        <div class="d-flex justify-content-between align-items-center">

          <div class="btn-group">

            <button type="button" class="btn btn-sm btn-outline-secondary"></button>

            <button type="button" class="btn btn-sm btn-outline-secondary"></button>

          </div>

          <small class="text-muted">価格:<%= @item.price %>円</small>

        </div>

      </div>

    </div>

  </div>

</div>
