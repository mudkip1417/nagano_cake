<div class="album py-5 bg-light">

  <div class="container">

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

      <% @items.each do |item| %>

        <div class="col">

          <div class="card shadow-sm">

            <%= link_to public_item_path(item.id) do %>

              <%= image_tag item.image, size: "250x225", class:'bd-placeholder-img card-img-top' %>

            <% end %>

            <div class="card-body">

              <p class="card-title">商品名:<%= item.name %></p>

              <div class="d-flex justify-content-between align-items-center">

                <small class="text-muted">価格:<%= item.price %>円</small>

              </div>

            </div>

          </div>

        </div>

      <% end %>

    </div>

  </div>

</div>